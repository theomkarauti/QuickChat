<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity"
    android:background="@color/primary_purple"
    >

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">


        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/splashlogo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quick Chat"
            android:layout_marginTop="@dimen/_24sdp"
            android:textSize="@dimen/_26sdp"
            android:fontFamily="@font/mulishbold"
            android:textColor="@color/white"
            android:gravity="center"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chat with your favourite persone nad cup of Tea"
            android:textSize="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/mulilight"
            android:textColor="@color/white"
            android:gravity="center"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="142dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">



        <ImageView

            android:layout_width="234dp"
            android:layout_height="157dp"
            android:layout_marginLeft="@dimen/_75sdp"
            android:background="@drawable/blindtagslogo" />

    </LinearLayout>




</RelativeLayout>